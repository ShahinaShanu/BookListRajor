@page
@model BookListRajor.Pages.BookList.UpsertModel
@{
}

<br />

<h2 class="text-info">@(Model.Book.Id!=0? "Edit":"Create") Book</h2> @*razor syntax*@
<br />
<div class="border container" style="padding:30px;">
    <form method="post">
        @if(Model.Book.Id!=0)
        {
        <input type="hidden" asp-for="Book.Id" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Name" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Book.Name"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Author" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Book.Author"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.ISBN" class="form-control" />
                <span class="text-danger" asp-validation-for="Book.ISBN"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <Button type="submit" class="btn btn-primary form-control">@(Model.Book.Id!=0? "Update" : "Create")</Button>
            </div>
            <div class="col-3">
                <a class="btn btn-success form-control" asp-page="Index">Back To List</a>
            </div>
        </div>
    </form>
</div>
@section scripts{
    <partial name="_ValidationScriptsPartial" />
}

